        <select id="IdInvitados" name="IdInvitados" multiple="multiple" class="form-control">
            @foreach (var item in ViewBag.listadoDeUsuarios as MultiSelectList)
            {
                <option value="@item.Value">@item.Text</option>
            }

        </select>
                    *@
                </div>
            </div>
            <br>
            <input class="btn btn-warning my-2 my-sm-0" type="submit" class="form-control" text="Guardar" />
        </form>
        <a class="linkss" href="#"> Cancelar</a>
    </div>
</body>

</html>

